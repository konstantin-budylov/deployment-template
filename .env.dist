# Docker Compose Environment Variables
# Copy this file to .env and customize the values

# HTTP Port (redirects to HTTPS)
HTTP_PORT=8000

# HTTPS Port
HTTPS_PORT=8443

# Container Names
NGINX_CONTAINER_NAME=web

# SSL Certificate Paths
SSL_CERT_PATH=./deployment/config/nginx/ssl
SSL_KEY_PATH=./deployment/config/nginx/ssl/nginx.key

# Nginx Configuration Paths
NGINX_CONFIG_PATH=./deployment/config/nginx/nginx.conf
NGINX_SSL_CONFIG_PATH=./deployment/config/nginx/ssl.conf

# Application Settings
APP_NAME=manogama
APP_ENV=development
APP_DEBUG=true

# Health Check Settings
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=40s
